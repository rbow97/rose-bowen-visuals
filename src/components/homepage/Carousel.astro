---
import Image from "../Image.astro";
---

<!-- TODO: Set up parallax scrolling -->
<div
  class="flex overflow-scroll flex-col lg:max-w-7xl lg:px-[20px] md:mx-auto mt-7 md:mt-6"
>
  <div class="flex flex-nowrap gap-3 items-center ml-5">
    <div class="shrink-0 flex-grow">
      <Image
        src="/images/me/rose-in-edinburgh.png"
        href="/"
        caption="Me in Edinburgh"
      />
    </div>
    <div class="shrink-0 flex-grow">
      <Image src="/images/me/purple-rose.png" href="/" caption="Me in Paris" />
    </div>
    <div class="shrink-0 flex-grow">
      <Image
        src="/images/me/rose-and-catherine.png"
        href="/"
        caption="Me and Catherine"
      />
    </div>
    <div class="shrink-0 flex-grow">
      <Image
        src="/images/me/rose-and-harry.png"
        href="/"
        caption="Me in Cornwall"
      />
    </div>
    <div class="basis-2 shrink-0 h-2"></div>
  </div>
</div>
