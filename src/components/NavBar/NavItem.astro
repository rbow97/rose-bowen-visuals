---
interface Props {
  href?: any;
}

const { href } = Astro.props;
---

<a
  class="py-2 px-3 md:py-2.5 md:px-4 border-2 border-primary-blue rounded-[40px] text-lg md:text-xl [&>span]:text-primary-blue md:hover:bg-primary-blue md:[&>span]:hover:text-primary-black duration-primary ease-primary overflow-hidden relative group block w-fit"
  href={href || "/"}
  ><span
    class="flex duration-primary ease-primary md:group-hover:-translate-y-[calc(100%_+_10px)]"
    ><slot /></span
  >
  <span
    class="absolute duration-primary ease-primary translate-y-full md:group-hover:-translate-y-full flex"
    aria-hidden><slot /></span
  ></a
>
