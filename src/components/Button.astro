<button
  class="button py-2 px-3 md:py-2.5 md:px-4 border-2 rounded-[40px] text-lg md:text-xl duration-primary ease-primary overflow-hidden relative group block w-fit nav-item"
>
  <span
    class="button-text flex duration-primary ease-primary md:group-hover:-translate-y-[calc(100%_+_10px)]"
  >
    <slot />
  </span>
  <span
    class="button-hover-text absolute duration-primary ease-primary translate-y-full md:group-hover:-translate-y-full flex"
    aria-hidden
  >
    <slot />
  </span>
</button>

<style>
  .button {
    border-color: var(--button-border-color);
    background-color: var(--button-bg-color);
  }

  .button-text {
    color: var(--button-text-color);
  }

  .button-hover-text {
    color: var(--button-hover-text-color);
  }

  .button:hover {
    background-color: var(--button-border-color);
  }

  .button:hover .button-text,
  .button:hover .button-hover-text {
    color: var(--button-hover-text-color);
  }
</style>
